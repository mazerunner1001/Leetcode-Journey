// substring question using bitmasking

class Solution {
public:
    long long wonderfulSubstrings(string word) {
        int n = word.size();
        long long result = 0;
        vector<long long> count(1 << 10);
        long long prefixMask = 0;
        count[prefixMask] = 1; 
        for(char c : word){
            int bit = c - 'a';
            prefixMask ^= 1 << bit;

            result += count[prefixMask];

            for(int i=0; i<10; i++){
                int mask2 = 1 << i;
                result += count[prefixMask ^ mask2];
            }

            ++count[prefixMask];
        }
        return result;
    }
};
