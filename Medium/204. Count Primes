\\ sieve of eratosthenes for counting primes

class Solution {
public:
    int countPrimes(int n) {
        if(n==0 || n==1 || n==2) return 0;
        int count = n-1;
        vector<bool> isPrime(n+1, true);
        isPrime[0] = isPrime[1] = false;
        for(int i=2; i*i<=n; i++){
            if(isPrime[i]){
                for(int j=i*i; j<=n; j+=i){
                    if(isPrime[j] == true){
                        isPrime[j] = false;
                        count--;
                    }
                }
            }
        }
        if(isPrime[n] == true) return count-1;
        return count;
    }
};
