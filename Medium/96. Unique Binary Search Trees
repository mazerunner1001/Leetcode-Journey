// Catalan number question

// Cn​  =  (2n)!  /  (n+1)!n!​

// dp solution using logic For a BST with n distinct nodes:
// Choose any node i (1 ≤ i ≤ n) as the root.
// Left subtree will have (i - 1) nodes
// Right subtree will have (n - i) nodes
// So the total BST count for this configuration:

// count(n) = Σ count(left) × count(right)
            = Σ count(i-1) × count(n-i)

class Solution {
public:
    int numTrees(int n) {
        vector<int> dp(n+1, 0);
        dp[0] = dp[1] = 1;

        for(int i = 2; i<=n; i++){
            for(int j=1; j<=i; j++){
                dp[i] += dp[j-1]*dp[i-j];
            }
        }

        return dp[n];
    }
};
