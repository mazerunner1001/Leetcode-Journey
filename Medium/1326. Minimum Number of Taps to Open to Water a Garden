// greedy problem similar to video stitching and jump game 2 can be solved using dp and greedy


// greedy

class Solution {
public:
    int minTaps(int n, vector<int>& ranges) {
        vector<pair<int, int>> intervals;
        for (int i = 0; i <= n; i++) {
            int left = max(0, i - ranges[i]);
            int right = min(n, i + ranges[i]);
            intervals.push_back({left, right});
        }
        sort(intervals.begin(), intervals.end());

        int dist = 0, i = 0, farthest = 0;
        int ans = 0;

        while(dist < n){
            while(i < intervals.size() && intervals[i].first <= dist){
                farthest = max(farthest, intervals[i].second);
                i++;
            }
            if(dist == farthest) return -1;
            ans++;
            dist = farthest;
        }

        return ans;
    }
};


// DP

class Solution {
public:
    int minTaps(int n, vector<int>& ranges) {
        const int INF = 1e9;
        vector<int> dp(n + 1, INF);
        dp[0] = 0;

        vector<pair<int, int>> intervals;
        for (int i = 0; i <= n; i++) {
            int left = max(0, i - ranges[i]);
            int right = min(n, i + ranges[i]);
            intervals.push_back({left, right});
        }

        for (int i = 1; i <= n; i++) {
            for (auto& in : intervals) {
                int L = in.first, R = in.second;
                if (L < i && i <= R && dp[L] != INF)
                    dp[i] = min(dp[i], dp[L] + 1);
            }
        }

        return dp[n] == INF ? -1 : dp[n];
    }
};
