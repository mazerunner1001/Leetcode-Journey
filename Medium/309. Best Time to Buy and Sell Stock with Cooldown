// done using 2d DP and take not take concept with skipping days


// memoization

class Solution {
public:
    int rec(int day, int buy, vector<int>& prices, int n, vector<vector<int>>& dp){
        if(day >= n){
            return 0;
        }
        if(dp[day][buy] != -1) return dp[day][buy];
        int profit;
        if(buy){
            int take = -prices[day] + rec(day+1, 0, prices, n, dp);
            int nottake = rec(day+1, 1, prices, n, dp);
            profit = max(take, nottake);
        } else{
            int sell = prices[day] + rec(day+2, 1, prices, n, dp);
            int notsell = rec(day+1, 0, prices, n, dp);
            profit = max(sell, notsell);
        }
        return dp[day][buy] = profit;
    }

    int maxProfit(vector<int>& prices) {
        int n = prices.size();
        vector<vector<int>> dp(n, vector<int>(2, -1));
        return rec(0, 1, prices, n, dp);
    }
};


// tabulation

class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int n = prices.size();
        vector<vector<int>> dp(n+2, vector<int>(2, 0));
        dp[n+1][0] = dp[n+1][1] = dp[n][0] = dp[n][1] = 0;
        for(int ind = n-1; ind >= 0; ind--){
            for(int buy = 0; buy<=1; buy++){
                long profit = 0;
                if(buy){
                    int take = -prices[ind] + dp[ind+1][0];
                    int nottake = dp[ind+1][1];
                    profit = max(take, nottake);
                } else{
                    int sell = prices[ind] + dp[ind+2][1];
                    int notsell = dp[ind+1][0];
                    profit = max(sell, notsell);
                }
                dp[ind][buy] = profit;
            }
        }
        return dp[0][1];
    }
};
